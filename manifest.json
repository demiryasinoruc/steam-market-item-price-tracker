{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "1.2.0",
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./popup/index.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["*://steamcommunity.com/market/listings/*"],
      "js": [
        "./common/keys.js",
        "./common/utility.js",
        "./content_scripts/listings.js"
      ],
      "css": ["./assets/styles/listings.css"],
      "run_at": "document_end"
    },
    {
      "all_frames": false,
      "js": [
        "./common/keys.js",
        "./common/utility.js",
        "./content_scripts/search.js"
      ],
      "css": ["./assets/styles/search.css"],
      "matches": ["*://steamcommunity.com/market/search*"],
      "run_at": "document_end"
    },
    {
      "all_frames": false,
      "matches": ["*://steamcommunity.com/market?smipt=*"],
      "js": ["./common/keys.js", "./content_scripts/market.js"],
      "run_at": "document_end"
    },
    {
      "all_frames": false,
      "matches": [
        "*://*.steamcommunity.com/id/*/inventory*",
        "*://*.steamcommunity.com/profiles/*/inventory*"
      ],
      "js": [
        "./common/keys.js",
        "./common/utility.js",
        "./content_scripts/inventory.js"
      ],
      "css": ["./assets/styles/inventory.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icons/icon_16.png",
    "32": "assets/icons/icon_32.png",
    "64": "assets/icons/icon_64.png",
    "128": "assets/icons/icon_128.png"
  },
  "options_page": "./options.html",
  "permissions": ["notifications", "storage", "tabs", "unlimitedStorage"],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*.json",
        "assets/*.svg",
        "assets/icons/*",
        "content_scripts/*.inject.js"
      ],
      "matches": ["*://steamcommunity.com/*", "*://*.steamusercontent.com/*"]
    }
  ]
}
